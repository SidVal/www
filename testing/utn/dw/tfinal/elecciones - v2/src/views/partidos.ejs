<!-- Sintaxis de EJS para importar el partial header -->
<% include partials/_header %>

<main role="main" class="bd-content container"></main>

    
    <h1>Tu voto suma</h1>

    <div class="row">
        <!-- FORMULARIO -->
        <div class="col-md-5">
            <div class="card">
                <div class="class card-body">
                    <form action="/agregar" method="POST">
                        <div class="class form-group">
                            <input type="text" name="titulo" placeholder="Inserte un título" class="form-control">
                        </div>
                        <div class="class form-group">
                                <textarea name="descripcion" cols="80" class="form-control" placeholder="Inserta una descripcion"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- LISTA -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Imagen</th>
                        <th>Partido</th>
                        <th>Candidato</th>
                        <th>Operación</th>
                    </tr>
                </thead>
                <tbody>
                    <& for(var i = 0; i < partidos.length; i++) { &>
                        <tr>
                            <td><&= i + 1 &></td>
                            <td><&= partidos[i].titulo &></td>
                            <td><&= partidos[i].descripcion &></td>
                            <td>
                                <a href="#">VOTAR</a>
                            </td>
                        </tr>
                    <& } &>
                </tbody>
            </table>
        </div>
    </div>
        
    

<!-- Sintaxis de EJS para importar el partial footer -->
<% include partials/_footer %>